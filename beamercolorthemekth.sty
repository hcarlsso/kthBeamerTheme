% General
\setbeamercolor{normal text}{fg=kthDarkGrey}
\setbeamercolor{structure}{fg=kthDarkGrey}
\setbeamercolor{alerted text}{fg=kthRed}
\setbeamercolor{example text}{fg=kthGreen}
\setbeamercolor{copyright text}{fg=kthPurple}

% Palettes
\setbeamercolor{palette primary}{fg=kthGrey, bg=kthDarkGrey}
\setbeamercolor{palette secondary}{fg=kthDarkGrey,bg=kthGrey}
\setbeamercolor{palette tertiary}{fg=kthLightBlue, bg=kthDarkGrey}
\setbeamercolor{palette quaternary}{fg=kthGrey, bg=kthBlue}
\setbeamercolor{mini frame}{bg=kthGrey}
\setbeamercolor{section in head/foot}{fg=kthDarkGrey, bg=kthGrey}

% Titlepage
\setbeamercolor{title}{parent=normal text}
\setbeamercolor{subtitle}{fg=kthBlue}
\setbeamercolor{institute}{parent=normal text}

% Content
\setbeamercolor{frametitle}{parent=palette primary}

% Blocks
\setbeamercolor{block title}{fg=white,bg=kthBlue}
\setbeamercolor{block body}{fg=kthDarkGrey, bg=kthGrey}
\setbeamercolor{block title example}{fg=white, bg=kthGreen}
\setbeamercolor{block body example}{fg=kthDarkGrey, bg=kthLightGreen}
\setbeamercolor{block title alerted}{fg=white, bg=kthRed}
\setbeamercolor{block body alerted}{fg=kthDarkGrey, bg=kthLightRed}

% Notes
\setbeamercolor{note page}{fg=kthDarkGrey,bg=kthGrey}
\setbeamercolor{note title}{fg=white, bg=kthDarkGrey}
\setbeamercolor{note date}{parent=note title}

% Page Number
\setbeamercolor{page number in head/foot}{fg=kthDarkGrey}
\setbeamercolor{qed}{fg=kthGreen}
\setbeamercolor{itemize item}{fg=kthBlue}
\setbeamercolor{itemize subitem}{fg=kthRed}
\setbeamercolor{itemize subsubitem}{fg=kthPurple}

